@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All roles";
    Layout = "_ManageLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper p-5">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <div class="row justify-content-between">
                        <h1>All roles</h1>
                        <a asp-action="CreateRole" class="btn btn-primary" style="margin-left: 10px">Create Role</a>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid px-2">
            <div class="row">
                @if (Model.Any())
                {
                    foreach (var role in Model)
                    {
                        <div class="col-12 col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Role Id: @role.Id
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@role.Name</h5>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" 
                                       class="btn btn-warning">Edit</a>
                                    <a href="#" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No roles created yet
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <a class="btn btn-primary" style="margin: 25px" asp-controller="Administration" asp-action="CreateRole">Create role</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->