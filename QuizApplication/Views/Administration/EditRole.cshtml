@using Microsoft.AspNetCore.Mvc.TagHelpers
@model QuizApplication.ViewModels.RoleViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit role";
    Layout = "_ManageLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit role</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Sub levels</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <form method="post">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 control-label"></label>
                        <input asp-for="Id" disabled class="col-sm-10 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label asp-for="RoleName" class="col-sm-2 control-label"></label>
                        <input asp-for="RoleName" class="col-sm-10 form-control"/> 
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
            </div>
        </form>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3>Users in this role</h3>
                        </div>
                        <div class="card-body">
                            <ol>
                                @if (Model.Users.Any())
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <li>@user</li>
                                    }
                                }
                                else
                                {
                                    <li>None at the moment</li>
                                }
                            </ol>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-info float-sm-right">Add or remove user</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->