@* @model IEnumerable<LeaderboardViewModel> *@
@{
    Layout = "_QuizLayout";
}

@section Styles
{
    <style>
            .container {
                margin-top: 30px;
            }
        </style>
}

<div class="container">
    <div class="card mb-2">
        <div class="card-header">
            <h2 style="text-align: center;">Leaderboard</h2>
            @* refresh icon *@
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped" style="text-align: center;">
                <thead>
                <tr style="font-size: 1.2em;">
                    <th>Rank</th>
                    <th>Name</th>
                    <th>Points</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>1</td>
                    <td>John Smith</td>
                    <td>100</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>