@model QuizApplication.ViewModels.QuizViewModels.LeaderboardViewModel

@{
    Layout = "_QuizLayout";
    ViewBag.Title = "Leaderboard";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/home.css">
    <style>
            .container {
                margin-top: 30px;
            }
            table th, table td{
            padding: 0.6rem;
            }
        </style>
}

<div class="container-fluid px-5 flex-grow-1 d-flex align-items-center justify-content-center"
     id="main">
    <div class="row flex-fill justify-content-center">
        <div class="col-8">
            <div class="card mt-3 my-2 flex-fill">
                <div class="card-header p-2">
                    <h2 class="mb-0" style="text-align: center; line-height: 1.5em;">Leaderboard</h2>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-striped" style="text-align: center;">
                        <thead>
                        <tr style="font-size: 1.2em;">
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            for (var index = 0; index < Model.Leaderboard.Count; index++)
                            {
                                var result = Model.Leaderboard[index];
                                <tr>
                                    <td>@(index+1)</td>
                                    <td>@result.Name</td>
                                    <td>@result.Score</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                    @if (Model.QuizResult != null)
                    {
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    Your Rank : @Model.UserRank
                                </div>
                                <div class="col-6">
                                    Score: @Model.QuizResult.Score
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>