@{
    Layout = "_QuizLayout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/home.css">
    <style>
            .container {
                margin-top: 30px;
            }
            table th, table td{
            padding: 0.6rem;
            }
        </style>
}

<div class="container-fluid px-5 flex-grow-1 d-flex align-items-center justify-content-center"
     id="main">
    <div class="row flex-fill justify-content-center">
        <div class="col-8">
            <div class="card mt-3 my-2 flex-fill">
                <div class="card-header p-2">
                    <h2 class="mb-0" style="text-align: center; line-height: 1.5em;">Leaderboard</h2>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-striped" style="text-align: center;">
                        <thead>
                        <tr style="font-size: 1.2em;">
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (int i = 0; i < 10; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>John Smith</td>
                                <td>100</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <table class="table table-dark table-striped mb-0" style="text-align: center;">
                        <thead>
                        <tr style="font-size: 1.2em;">
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>